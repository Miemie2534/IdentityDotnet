@model OfferList
@{
    ViewData["Title"] = "CreateOffer";
}

<h2>บันทึกข้อมูลงานเสนอต่างๆ</h2>
<hr />

<div class="container-sm mt-4 d-flex justify-content-between align-items-center">
    <div class="col-4">
        <form asp-action="CreateOffer" method="post">
            <div class="row">
                <div class="mb-2 col-5">
                    <label asp-for="Number" class="form-label">เลขที่ใบงาน</label>
                    <input asp-for="Number" type="text" class="form-control" placeholder="กรุณากรอกเลขใบงาน">
                    <span asp-validation-for="Number"></span>
                </div>
                <div class="mb-2 col-5">
                    <label asp-for="DateOnly" class="form-label">วันที่</label>
                    <input asp-for="DateOnly" type="date" class="form-control" placeholder="ข้อมูลวันที่">
                    <span asp-validation-for="DateOnly" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-2">
                <label asp-for="Description" class="form-label">รายละเอียด</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <select asp-for="CheckList" class="form-select" aria-label="Default select example">
                <option selected>สถานะใบงาน</option>
                <option value="เสนอสร้าง">เสนอสร้าง</option>
                <option value="เสนอซ่อม">เสนอซ่อม</option>
                <option value="เสนอซื้">เสนอซื้อ</option>
            </select>
            <div class="mb-2">
                <label asp-for="Status" class="form-label">สถานะใบงาน</label>
                <textarea asp-for="Status" type="text" class="form-control"></textarea>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Finish" class="form-label">หมายเหตุ</label>
                <textarea asp-for="Finish" type="text" class="form-control"></textarea>
                <span asp-validation-for="Finish" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Recorder" class="form-label">ผู้บันทึก</label>
                <input asp-for="Recorder" type="text" class="form-control">
                <span asp-validation-for="Recorder" class="text-danger"></span>
            </div>
            <button class="btn btn-primary" type="submit">บันทึก</button>
        </form>
    </div>
    <img class="p-3" src="/fireman.webp" width="450" />
</div>


